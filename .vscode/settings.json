{
    "github.copilot.enable": {
        "*": false,
    },
    "rubyLsp.formatter": "rubocop",
    "rubyLsp.rubyVersionManager": {
        "identifier": "auto"
    },
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "cSpell.words": [
        "DOTMATCH",
        "ftype",
        "getgrgid",
        "ljust",
        "nlink",
        "optparse",
        "readlink",
        "rubocop",
        "wday"
    ]
}
